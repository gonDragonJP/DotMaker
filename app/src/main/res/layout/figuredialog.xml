<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:id="@+id/figuredialog_root"
  android:gravity="center" 
  android:orientation="vertical" 
  android:layout_width="match_parent" 
  android:layout_height="wrap_content">
  
  <LinearLayout
  	android:id="@+id/figuredialog_menu"
  	android:layout_width="wrap_content"
  	android:layout_height="wrap_content"
  	android:orientation="horizontal">
  	<RadioGroup
  	  android:id="@+id/figuredialog_radiogroup1"
  	  android:layout_width="wrap_content"
  	  android:layout_height="wrap_content"
  	  android:orientation="vertical">
  	  <RadioButton
  	  	android:id="@+id/figuredialog_radioline"
  	  	android:layout_width="wrap_content"
  	  	android:layout_height="wrap_content"
  	  	android:text="Line">
  	  </RadioButton>
  	  <RadioButton
  	  	android:id="@+id/figuredialog_radiobox"
  	  	android:layout_width="wrap_content"
  	  	android:layout_height="wrap_content"
  	  	android:text="Box">
  	  </RadioButton>
  	  <RadioButton
  	  	android:id="@+id/figuredialog_radiocircle"
  	  	android:layout_width="wrap_content"
  	  	android:layout_height="wrap_content"
  	  	android:text="Circle">
  	  </RadioButton>
  	  <RadioButton
  	  	android:id="@+id/figuredialog_radiotext"
  	  	android:layout_width="wrap_content"
  	  	android:layout_height="wrap_content"
  	  	android:text="Text">
  	  </RadioButton>
  	</RadioGroup>
  	<LinearLayout
  	  android:layout_width="wrap_content"
  	  android:layout_height="wrap_content"
  	  android:orientation="vertical">
  		<LinearLayout
  			android:layout_width="wrap_content"
  	  		android:layout_height="wrap_content"
  	  		android:orientation="horizontal">
  	  			<CheckBox
  	  				android:id="@+id/figuredialog_checkfillcolor"
  	  				android:layout_width="wrap_content"
  	  				android:layout_height="wrap_content">
  	  			</CheckBox>
  	  			<TextView
  	  				android:layout_width="wrap_content"
  	  				android:layout_height="wrap_content"
  	  				android:text="Fill Color">
  	  			</TextView>
  		</LinearLayout>
  		<LinearLayout
  	  		android:layout_width="wrap_content"
  	  		android:layout_height="wrap_content"
  	  		android:orientation="horizontal">
  	  			<CheckBox
  	  				android:id="@+id/figuredialog_checkfollowrangeope"
  	  				android:layout_width="wrap_content"
  	  				android:layout_height="wrap_content">
  	  			</CheckBox>
  	  			<LinearLayout
  	  			android:layout_width="wrap_content"
  	  			android:layout_height="wrap_content"
  	  			android:orientation="vertical">
  	  				<TextView
  	  					android:layout_width="wrap_content"
  	  					android:layout_height="wrap_content"
  	  					android:text="Following">
  	  				</TextView>
  	  				<TextView
  	  					android:layout_width="wrap_content"
  	  					android:layout_height="wrap_content"
  	  						android:text="Range Operation">
  	  				</TextView>
  	  		</LinearLayout>
  		</LinearLayout>
  	</LinearLayout>
  </LinearLayout>
  
  <LinearLayout
  	android:layout_width="wrap_content"
  	android:layout_height="wrap_content"
  	android:orientation="horizontal"
  	android:layout_marginTop="10px">
  	<Button
  	  android:id="@+id/figuredialog_ok"
   	  android:layout_width="wrap_content"
      android:layout_height="wrap_content"
  	  android:text="OK">
   </Button>
   <Button
   	  android:id="@+id/figuredialog_cancel"
  	  android:layout_width="wrap_content"
  	  android:layout_height="wrap_content"
  	  android:text="Cancel">
   </Button>
  </LinearLayout>
</LinearLayout>